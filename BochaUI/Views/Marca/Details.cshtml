@model BochaUI.Models.Marca
@{
    ViewData["Title"] = "Ver Marca";
}
<h1 style="text-align:center">@ViewData["Title"]</h1>

@if (Model is not null){
<form method="post">
    <div class="mb-3">
        <label>Nombre :</label>
        <input asp-for="Nombre" class="form-control" readonly>
    </div>

    <div class="row col-6">
        <div class="col-3 col-md-3">
            <br />
            <a asp-action="Resumen" class="btn btn-outline-dark">Regresar</a>
        </div>
    </div>


</form>
}