@model BochaUI.Models.Categoria
@{
    ViewData["Title"] = "Crear Categoria";
}
<h1 style="text-align:center">@ViewData["Title"]</h1>

    <form method="post">
        <div class="mb-3">
            <br />
            <label>Codigo :</label>
            <input asp-for="Code" class="form-control">
        </div>
        <div class="mb-3">
            <label>Nombre :</label>
            <input asp-for="Nombre" class="form-control">
        </div>
        <div class="mb-3">
            <label>Link Imagen :</label>
            <input asp-for="CategoriaImageURL" class="form-control">
        </div>

    <div class="row col-6">
        <div class="col-3 col-md-3">
            <br />
            <button type="submit" class="btn btn-outline-light">Guardar</button>
        </div>
        <div class="col-3 col-md-3">
            <br />
            <a asp-action="Resumen" class="btn btn-outline-light">Regresar</a>
        </div>
    </div>

    </form>