@model BochaUI.Models.Categoria
@{
    ViewData["Title"] = "Editar Categotia";
}
<h1 style="text-align:center">@ViewData["Title"]</h1>

@if (Model is not null)
{
    <form method="post">
        <div class="mb-3">
            <br />
            <label>Codigo :</label>
            <input asp-for="Code" class="form-control">
        </div>
        <div class="mb-3">
            <label>Nombre :</label>
            <input asp-for="Nombre" class="form-control">
        </div>
        <div class="mb-3">
            <label>Link Imagen :</label>
            <input asp-for="CategoriaImageURL" class="form-control">
        </div>

        <div class="row col-6">
            <div class="col-3 col-md-3">
                <br />
                <button type="submit" class="btn btn-outline-dark">Guardar</button>
            </div>
            <div class="col-3 col-md-3">
                <br />
                <a asp-action="Resumen" class="btn btn-outline-dark">Regresar</a>
            </div>
        </div>


    </form>
}
